@model IEnumerable<gestionAlmacen.Models.MDetalle_Venta>

@{
    ViewData["Title"] = "Index";
}

<h1>Detalle venta</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear nueva venta</a>
</p>

@if (TempData["message"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["message"]
    </div>
}
<table class="table table-bordered table-striped table-responsive mt-2" id="Detalle_ventaTables">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.ID_Detalle)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.ID_Venta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mProductos.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio_Unitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Impuesto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @* <td>
                @Html.DisplayFor(modelItem => item.ID_Detalle)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.ID_Venta)
            </td>
                <td>
                    @item.mProductos?.Nombre
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio_Unitario)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subtotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Impuesto)
                </td>
            <td>

                    <a asp-controller="DetallesVentas"
                       asp-action="Edit"
                       asp-route-id="@item.ID_Detalle"
                       class="btn btn-primary">
                        Editar
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@item.ID_Detalle"
                       class="btn btn-danger">
                        Eliminar
                    </a>
               
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#Detalle_ventaTables").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'csv', 'pdf', 'excel'
                ],
                columnDefs: [
                    {
                        target: 6,
                        orderable: false,
                        searchable: false
                    }
                ],
                // language: {
                //     url: '//cdn.datatables.net/plug-ins/2.0.3/i18n/es-ES.json'
                // }
            });
        })
    </script>
}

